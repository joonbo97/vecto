<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialog" parent ="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="CustomBottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog_box</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/vecto_theme_orange</item>
        <item name="fontFamily">@font/lineseedkr_rg</item>
    </style>

    <style name="TabLayout_Text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lineseedkr_rg</item>
        <item name="android:textColor">@color/tab_layout_normal</item>
    </style>

    <style name="TabLayout_Selected_Text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lineseedkr_bd</item>
        <item name="android:textColor">@color/vecto_theme_orange</item>
    </style>
</resources>