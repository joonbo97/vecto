<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui_bottom.EditCourseFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/naver_map_Edit"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/vecto_transparenct"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/CalendarLargeBoxImage"
            android:layout_width="249dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/calender_largebox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/CalendarBoxImage"
            android:layout_width="63dp"
            android:layout_height="33dp"
            android:layout_marginStart="9dp"
            android:src="@drawable/calender_box"
            app:layout_constraintBottom_toBottomOf="@+id/CalendarLargeBoxImage"
            app:layout_constraintStart_toStartOf="@+id/CalendarLargeBoxImage"
            app:layout_constraintTop_toTopOf="@+id/CalendarLargeBoxImage"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/CalendarIconImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/calender_icon"
            app:layout_constraintBottom_toBottomOf="@+id/CalendarBoxImage"
            app:layout_constraintEnd_toEndOf="@+id/CalendarBoxImage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/CalendarBoxImage"
            app:layout_constraintTop_toTopOf="@+id/CalendarBoxImage"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/TextForLargeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/lineseedkr_bd"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/CalendarLargeBoxImage"
            app:layout_constraintEnd_toEndOf="@+id/CalendarLargeBoxImage"
            app:layout_constraintStart_toEndOf="@+id/CalendarBoxImage"
            app:layout_constraintTop_toTopOf="@+id/CalendarLargeBoxImage"
            app:layout_constraintVertical_bias="0.5" />


        <ImageView
            android:id="@+id/SearchButtonImage"
            android:layout_width="81dp"
            android:layout_height="45dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/search_smallbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/EditLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/naver_map_Edit"
        tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:id="@+id/TitleImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_editcourse_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/vecto_pathcolor" />

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lineseedkr_bd"
            android:text="경로 설정 하기"
            android:textColor="@color/vecto_pathcolor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/TitleImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/DeleteButton"
            android:layout_width="93dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/delete_button"
            app:layout_constraintEnd_toStartOf="@+id/MergeButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DeleteButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lineseedkr_bd"
            android:text="지우기"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/DeleteButton"
            app:layout_constraintEnd_toEndOf="@+id/DeleteButton"
            app:layout_constraintStart_toStartOf="@+id/DeleteButton"
            app:layout_constraintTop_toTopOf="@+id/DeleteButton"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/MergeButton"
            android:layout_width="93dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/merge_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MergeButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lineseedkr_bd"
            android:text="합치기"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/MergeButton"
            app:layout_constraintEnd_toEndOf="@+id/MergeButton"
            app:layout_constraintStart_toStartOf="@+id/MergeButton"
            app:layout_constraintTop_toTopOf="@+id/MergeButton"
            app:layout_constraintVertical_bias="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="80dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/LocationRecyclerView"
            android:layout_width="400dp"
            android:layout_height="200dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>