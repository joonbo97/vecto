<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notificationBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/mypage_menubox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/lineseedkr_bd"
        android:text="알림입니다."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginEnd="100dp"
        android:lineSpacingExtra="3sp"
        app:layout_constraintEnd_toEndOf="@+id/notificationBox"
        app:layout_constraintBottom_toBottomOf="@+id/notificationBox"
        app:layout_constraintStart_toStartOf="@+id/notificationBox"
        app:layout_constraintTop_toTopOf="@+id/notificationBox"
        app:layout_constraintVertical_bias="0.53" />

    <TextView
        android:id="@+id/PostTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:alpha="0.7"
        android:fontFamily="@font/lineseedkr_rg"
        android:text="17시간 전"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/notificationBox"
        app:layout_constraintEnd_toEndOf="@+id/notificationBox"
        app:layout_constraintTop_toTopOf="@+id/notificationBox"
        app:layout_constraintVertical_bias="0.53" />

    <ImageView
        android:id="@+id/notificationCircle"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/notification_circle"
        app:layout_constraintStart_toEndOf="@+id/notificationText"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>